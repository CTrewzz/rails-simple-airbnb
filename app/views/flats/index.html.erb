<h1>Flats <%= @flats.count %></h1>
<form action="/flats">
  <input type="text" placeholder="Search" name="query">
  <input type="submit" value="Search">
</form>

<br>
<%= link_to 'Add Flat', new_flat_path, class: "btn btn-danger" %>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Guests</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.name %></td>
        <td><%= flat.address %></td>
        <td><%= flat.number_of_guests %></td>
        <td><%= flat.price_per_night %></td>
        <td><%= link_to "See more", flat, class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-success" %> </td>
        <td><%= link_to 'Delete', flat,
                        method: :delete,
                        data: { confirm: 'Do you want to delete it?'}, class: "btn btn-danger" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
